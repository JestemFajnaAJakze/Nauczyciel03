<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pytania"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_weight="1.38">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Kategoria:"
            android:id="@+id/textView5"
            android:layout_weight="0.20"
            android:layout_gravity="center_horizontal" />

        <Spinner
            android:layout_width="92dp"
            android:layout_height="51dp"
            android:id="@+id/spinner"
            android:layout_weight="0.64"
            android:spinnerMode="dropdown"
            android:layout_gravity="top" />
    </LinearLayout>

    <ListView
        android:id="@+id/choosenQuestionList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"></ListView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:gravity="center" >

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imageButton18"
            android:src="@drawable/back_button3"
            android:scaleType="fitXY"
            android:adjustViewBounds="false"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:onClick="onClickBackButton"
            android:layout_marginRight="30dp" />

        <ImageButton
            style="@style/Base.V21.Theme.AppCompat.Light.Dialog"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imageButton19"
            android:src="@drawable/add_button3"
            android:scaleType="fitXY"
            android:adjustViewBounds="false"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:onClick="onClickAddQuestionActivity" />
    </LinearLayout>
</LinearLayout>